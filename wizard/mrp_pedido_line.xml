<odoo>
    <record id="pedidio_line_wizard" model="ir.ui.view">
        <field name="name">Mrp Pedido Line Wizard</field>
        <field name="model">pedido.line.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_id"/>
                        <field name="pedido_id" invisible="1"/>
                        <field name="location_dest_id"/>
                    </group>
                    <group>
                        <field name="product_uom_qty"/>
                    </group>
                </group>
                <footer>
                    <button type="object" name="add_detail"
                            string="Guardar" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>